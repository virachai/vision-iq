# Image Analysis & Semantic Matching (Narrative-to-Video)

## DeepSeek Integration (for narrative parsing)
DEEPSEEK_API_KEY="your-deepseek-api-key"
DEEPSEEK_API_URL="https://api.deepseek.com/chat/completions"
ENABLE_DEEPSEEK=true
# ตัวคุมใหญ่ (Master Switch): ถ้าเป็น false ทุกฟีเจอร์ข้างล่างจะปิดหมด
# ถ้าเป็น true จะไปดู flag ย่อยแต่ละตัว

# --- Granular Feature Flags (ปรับละเอียด) ---
# ใช้ DeepSeek แกะ Scene จากบท (Narrative -> Scenes)
ENABLE_DEEPSEEK_SCENE_EXTRACTION=true

# ใช้ DeepSeek ขยายความ Scene ให้ละเอียดขึ้น (Low resolution -> High resolution prompts)
ENABLE_DEEPSEEK_INTENT_EXPANSION=true

# ใช้ DeepSeek ช่วยแปลง Output ดิบจาก Gemini ให้เป็น JSON สวยๆ (Raw Text -> JSON)
ENABLE_DEEPSEEK_RAW_PARSING=true

# ใช้ DeepSeek วิเคราะห์เชิงลึก 7 เลเยอร์ (Cinematic Analysis)
ENABLE_DEEPSEEK_DETAILED_ANALYSIS=true

# ใช้ DeepSeek ดึง Keyword สำหรับค้นหารูป (Intent -> Search Keywords)
ENABLE_DEEPSEEK_KEYWORD_EXTRACTION=true

# อนุญาตให้ Cron Job ทำงานเบื้องหลัง (Background Analysis Task)
ENABLE_DEEPSEEK_CRON=true

## Gemini Integration (for image analysis)
GEMINI_API_KEY="your-google-gemini-api-key"
ENABLE_GEMINI=true
# ตัวคุมใหญ่ (Master Switch)

# --- Granular Feature Flags (ปรับละเอียด) ---
# ใช้ Gemini วิเคราะห์รูปภาพเบื้องต้น (Basic Metadata, Composition, Mood)
ENABLE_GEMINI_VISION_ANALYSIS=true

# ใช้ Gemini วิเคราะห์เชิงลึกแบบ Cinematic (Vision -> Narrative Description)
# ตัวนี้จะส่งต่อให้ DeepSeek ทำงานต่อในส่วน 7 Layers
ENABLE_GEMINI_VISUAL_INTENT=true

## Pexels Integration (for image library)
PEXELS_API_KEY="your-pexels-api-key"
ENABLE_PEXELS=true

## Redis (for BullMQ async processing)
REDIS_URL="redis://localhost:6379"

## Embedding Service (for vector generation)
# EMBEDDING_MODEL="text-embedding-3-small"
# If using OpenAI embeddings, add:
# OPENAI_API_KEY="your-openai-key"

## Sync Configuration
PEXELS_REQUESTS_PER_HOUR="200"
BATCH_FAILURE_THRESHOLD="0.1"
ENABLE_ANALYSIS_CRON=true