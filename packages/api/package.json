{
	"name": "@repo/api",
	"version": "0.0.0",
	"private": true,
	"license": "MIT",
	"scripts": {
		"dev": "pnpm build --watch",
		"build": "tsc -b -v",
		"lint": "biome check ."
	},
	"main": "./dist/entry.js",
	"types": "./dist/entry.d.ts",
	"files": [
		"./dist/**"
	],
	"publishConfig": {
		"access": "public"
	},
	"exports": {
		".": {
			"types": "./dist/entry.d.ts",
			"import": "./dist/entry.js",
			"require": "./dist/entry.js"
		},
		"./*": {
			"types": "./dist/*.d.ts",
			"import": "./dist/*.js",
			"require": "./dist/*.js"
		}
	},
	"dependencies": {
		"@nestjs/mapped-types": "*",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.3"
	},
	"devDependencies": {
		"@repo/biome-config": "workspace:*",
		"@repo/typescript-config": "workspace:*",
		"@types/node": "^22.10.7",
		"ts-loader": "^9.4.3",
		"ts-node": "^10.9.2",
		"typescript": "5.5.4"
	}
}
