{
	"extends": "@repo/typescript-config/nestjs.json",
	"compilerOptions": {
		"allowJs": true,
		"baseUrl": "src",
		"rootDir": "src",
		"esModuleInterop": true,
		"incremental": true,
		"noEmit": false,
		"composite": true,
		"allowImportingTsExtensions": false,
		"outDir": "dist",
		"types": ["node"]
	},
	"include": ["src"],
	"exclude": ["node_modules", "test", "dist", "**/*spec.ts"]
}
