{
	"extends": "@repo/typescript-config/base.json",
	"compilerOptions": {
		"declaration": true,
		"declarationMap": true,
		"allowJs": true,
		"esModuleInterop": true,
		"incremental": true,
		"noEmit": false,
		"composite": true,
		"allowImportingTsExtensions": false,
		"module": "commonjs",
		"moduleResolution": "Node10",
		"outDir": "dist",
		"baseUrl": "src",
		"rootDir": "src"
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules",
		"test",
		"dist",
		"**/*spec.ts"
	]
}